{
  "name": "@distributeaid/shipments",
  "version": "0.0.0-development",
  "description": "Public shipment tracker for Distribute Aid shipments",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/distributeaid/shipments.git"
  },
  "keywords": [
    "Distribute Aid",
    "shipments"
  ],
  "author": "Distribute Aid | https://distributeaid.org/",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/distributeaid/shipments/issues"
  },
  "homepage": "https://github.com/distributeaid/shipments#readme",
  "scripts": {
    "build": "npx webpack --config-name production",
    "start": "webpack-dev-server --config-name development --open",
    "lint": "eslint --ext .js,.ts,.tsx src/**",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "postinstall": "check-node-version --package",
    "test": "jest"
  },
  "devDependencies": {
    "@bifravst/code-style": "^8.0.13",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-angular": "^9.1.1",
    "@svgr/webpack": "^5.4.0",
    "@types/jest": "^26.0.4",
    "@types/leaflet": "^1.5.16",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-leaflet": "^2.5.2",
    "@types/styled-components": "^5.1.1",
    "check-node-version": "^4.0.3",
    "eslint-plugin-react": "^7.20.3",
    "fetch-ponyfill": "^6.1.1",
    "handlebars": "^4.7.6",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "localforage": "^1.7.4",
    "nock": "^13.0.3",
    "semantic-release": "^17.1.1",
    "source-map-loader": "^1.0.1",
    "ts-jest": "^26.1.2",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ],
    "*.{md,json,yaml,yml,js}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "feather-icons": "^4.28.0",
    "fp-ts": "^2.7.0",
    "leaflet": "^1.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-leaflet": "^2.7.0",
    "snyk": "^1.362.0",
    "styled-components": "^5.1.1"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "snyk": true,
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
